{% extends 'base.html.twig' %}

{% block title %}Page de profile
{% endblock %}

{% block body %}
	<script src="{{ asset('assets/js/profile.js') }}" defer></script>
	<div class="main_ctn_profile">
		<div class="img-ctn">
			{% if app.user.getProfileImg %}
				<img class="profile_img_user" src="/uploads/photos/{{ app.user.getProfileImg }}">
			{% else %}
				<p>Ce compte n'a pas de photo</p>
			{% endif %}
		</div>
		<div class="card_user_profile">
			<p class="username_profile">{{ app.user.username }}</p>
			<div style="display: flex; flex-wrap: no-wrap;">
				<p>{{ publiNb }}
					Deviations |</p>
				<p>0 Favorites</p>
			</div>
		</div>
	</div>
	<div class="nav_profile_ctn">
		<ul>
			<li class="nav_li_profile">Home</li>
			<li class="nav_li_profile">Gallery</li>
			<li class="nav_li_profile">Favourites</li>
			<li class="nav_li_profile">Posts</li>
			<li class="nav_li_profile">About</li>
		</ul>
	</div>
	<div class="a_prof_cret">
		<div class="a_prof_bis">
			<a class="a_frt" href="{{ path('createpubli') }}">
				Submit
			</a>
		</div>
	</div>

	<div class="publi_ctn">
		<div class="profile_lrg">
			{% for publi in publications %}
				<div class="card_prof_wtd">
					<div class="profile_ctn_main">
						<img src="/uploads/photos/{{ publi.getImgCouverture }}"/>
						<div class="profile_info_card" onclick="hideSize(this)">
							<h3>{{ publi.title}}</h3>
							<p>{{ publi.contenue }}...</p>
							{% for pub in publi.categories %}
								<a href="{{ path('categoryadd', { name: pub.name }) }}" class="p_card_profile">#{{ pub.name}}</a>
							{% endfor %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
